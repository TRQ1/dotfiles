snippet tm "template"
package main

import (
	"fmt"
)

func main() {
	fmt.Print("hello world")
	${1}
}
endsnippet

snippet im "import"
import "${1:lib}"
endsnippet

snippet fori "for i :=0; i < count; i ++ { ... }"
for ${1:i} := 0; $1 < ${2:count}; $1{3:++} {
}
endsnippet

snippet fun "func name( ... ) error { ... }"
func ${1:name}(${2}) ${3:error} {
	${4}
}
endsnippet

snippet if "if con { ... }"
if ${1} {
	${2}
}
endsnippet
